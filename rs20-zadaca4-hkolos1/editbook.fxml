<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="5.0" prefWidth="300.0" stylesheets="/css/forma.css" vgap="5.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="229.0" minWidth="10.0" prefWidth="109.6" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="278.0" minWidth="10.0" prefWidth="191.19999999999996" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <Label text="Author">
            <GridPane.margin>
                <Insets left="20.0" />
            </GridPane.margin></Label>
        <Label text="Title" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="20.0" />
            </GridPane.margin></Label>
        <Label text="ISBN" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets left="20.0" />
            </GridPane.margin></Label>
        <Label text="Page count" GridPane.rowIndex="3">
            <GridPane.margin>
                <Insets left="20.0" />
            </GridPane.margin></Label>
        <Label text="Publish date" GridPane.rowIndex="4">
            <GridPane.margin>
                <Insets left="20.0" />
            </GridPane.margin></Label>
        <TextField fx:id="fldAuthor" prefWidth="200.0" GridPane.columnIndex="1">
            <GridPane.margin>
                <Insets right="25.0" />
            </GridPane.margin></TextField>
        <TextField fx:id="fldTitle" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets right="25.0" />
            </GridPane.margin></TextField>
        <TextField fx:id="fldIsbn" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets right="25.0" />
            </GridPane.margin></TextField>
        <Spinner fx:id="spinPageCount" max="1000" min="10" prefHeight="25.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <GridPane.margin>
                <Insets right="25.0" />
            </GridPane.margin></Spinner>
        <DatePicker fx:id="dpPublishDate" prefHeight="25.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <GridPane.margin>
                <Insets right="25.0" />
            </GridPane.margin></DatePicker>
        <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <buttons>
                <Button fx:id="btnOk" defaultButton="true" mnemonicParsing="false" prefWidth="91.0" text="OK" />
                <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false"  text="Cancel" />
            </buttons>
            <GridPane.margin>
                <Insets right="40.0" />
            </GridPane.margin>
        </ButtonBar>
    </children>
   <padding>
