<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="5.0" vgap="5.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@/css/main.css" />
    </stylesheets>
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
    <children>
        <Label text="Ime:" />
        <TextField fx:id="nameField" GridPane.columnIndex="1" />
        <Label text="Prezime:" GridPane.rowIndex="1" />
        <TextField fx:id="surnameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="Ime roditelja:" GridPane.rowIndex="2" />
        <TextField fx:id="parentNameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Label text="Datum rođenja:" GridPane.rowIndex="3" />
        <DatePicker fx:id="dateField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Label text="Mjesto rođenja:" GridPane.rowIndex="4" />
        <ComboBox fx:id="placeOfBirth" editable="true" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <Label text="Adresa prebivališta:" GridPane.rowIndex="5" />
        <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        <Label text="Mjesto prebivališta:" GridPane.rowIndex="6" />
        <ComboBox fx:id="addressPlace" editable="true" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        <Label text="Poštanski broj:" GridPane.rowIndex="7" />
        <TextField fx:id="postalNumberField" GridPane.columnIndex="1" GridPane.rowIndex="7" />
        <Label text="JMBG:" GridPane.rowIndex="8" />
        <TextField fx:id="jmbgField" GridPane.columnIndex="1" GridPane.rowIndex="8" />
        <ButtonBar prefHeight="40" GridPane.columnSpan="2" GridPane.rowIndex="10">
            <buttons>
                <Button fx:id="okButton" mnemonicParsing="false" text="Ok" />
                <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel" />
            </buttons>
        </ButtonBar>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</GridPane>
